apiVersion: backstage.io/v1alpha1
kind: Component
metadata:
  name: <%= appName %>
  description: |
    React template via DevGate
  annotations:
    argocd/app-name: <%= appName %>-gitops
    backstage.io/kubernetes-id: devgate
    sonarqube.org/project-key: des-spf-<%= appName %>
  tags:
    - <%= appName %>
  links:
    - title: Infineon
      url: https://www.infineon.com/
    - title: Prod Application URL
      url: https://<%= appName %>.icp.infineon.com
    - title: Staging Application URL
      url: https://<%= appName %>-staging.icp.infineon.com
    - title: DevSpace URL
      url: https://gitlab.intra.infineon.com/-/ide/project/ifx/devgate/devgate-dev/<%= appName %>/edit/master/

spec:
  type: service
  lifecycle: production
  owner: devgate
  system: devgate
  dependsOn:
    - resource:pgdb
    - resource:tekton
    - resource:bitbucket